pipeline {
    agent any

    environment {
        DOCKERHUB_USER = credentials('dockerhub')
        IMAGE = "${DOCKERHUB_USER_USR}/trend:latest"
    }

    stages {

        stage('Clone Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Naveenknavee/Trend.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                docker build -t $IMAGE .
                """
            }
        }

        stage('Login to DockerHub') {
            steps {
                sh """
                echo "$DOCKERHUB_USER_PSW" | docker login -u "$DOCKERHUB_USER_USR" --password-stdin
                """
            }
        }

        stage('Push Image to DockerHub') {
            steps {
                sh """
                docker push $IMAGE
                """
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh """
                sudo aws eks update-kubeconfig --name my-eks-cluster --region ap-south-1
                sudo kubectl get ns
                sudo kubectl create -f deployment.yaml
                sudo kubectl get pods 
                """
            }
        }
    }
}
